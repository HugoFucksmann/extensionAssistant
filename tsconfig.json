{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "outDir": "out",
    "lib": ["ES2020", "DOM"],
    "sourceMap": true,
    "baseUrl": ".",
    "types": ["vscode", "node", "jest"],
    "paths": {
      "@vscode/*": ["src/vscode/*"],
      "@vscode/ui/*": ["src/vscode/UI/*"],
      "@vscode/react/*": ["src/vscode/UI/*"],
      "@core/*": ["src/core/*"],
      "@features/*": ["src/features/*"],
      "@shared/*": ["src/shared/*"],
      "@ai/*": ["src/features/ai/*"],
      "@memory/*": ["src/features/memory/*"],
      "@tools/*": ["src/features/tools/*"],
      "@events/*": ["src/features/events/*"],
      "@shared/types": ["src/shared/types.ts"],
      "@components/*": ["src/vscode/UI/Components/*"],
      "@context/*": ["src/vscode/UI/context/*"]
    },
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "incremental": true,
    "tsBuildInfoFile": "./out/.tsbuildinfo",
    "moduleResolution": "node",
    "noEmit": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", ".vscode-test", "out"]
}